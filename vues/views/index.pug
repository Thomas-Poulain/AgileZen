doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title SportTrack
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css' rel='stylesheet')
  script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js')
  link(rel='stylesheet' href='css/style.css')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet')
  script(src="https://code.jquery.com/jquery-3.6.0.min.js")
.col-xs-2.card-header-title.font-size-lg.text-capitalize.font-weight-normal.text-white.text-center.mt-4
  h1.center SportTrack
.app
  .card.card-hover-shadow-2x.card.rounded
    .card.d-flex.flex-column.justify-content-around.card-header-tab.card-header.widget-content-wrapper
      .d-flex.flex-row.flex-wrap
        .d-flex.flex-row
          button.border-0.btn-transition.btn.btn-outline-primary(onclick="window.location.href = '/listUsers';") User List
          button.border-0.btn-transition.btn.btn-outline-danger(onclick="window.location.href = '/disconnect';") Disconnect
    .scroll-area-sm
      perfect-scrollbar.ps-show-limits
        table.table
          thead.thead-dark.sticky-top
            tr
              th(scope='col') Title
              th(scope='col') Description
              th(scope='col') Start date
              th(scope='col') End date
              th(scope='col') Status
          tbody
            tr(v-for='project in projects', @click='showDetails(project)')
              th(scope='row') {{project.name}}
              td {{project.description}}
              td {{project.startDate}}
              td {{project.deadline}}
              td {{project.status}}

  #activityModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='activityModalLabel' aria-hidden='true')
    .modal-dialog.modal-dialog-centered.modal-lg(role='document')
      .modal-content
        .modal-header
          h5#activityModalLabel.modal-title {{selectedProject.description}}
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          .card.card-hover-shadow-2x.card.rounded
            .card.d-flex.flex-column.justify-content-around.card-header-tab.card-header.widget-content-wrapper
              .scroll-area-sm
                perfect-scrollbar.ps-show-limits
                  table.table
                    thead.thead-dark.sticky-top
                      tr
                        th(scope='col') Name
                        th(scope='col') Role
                    tbody
                      tr(v-for='employee in selectedProject.employee')
                        th(scope='row') {{employee.name}}
                        td {{employee.role}}
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Fermer

script(src='https://unpkg.com/vue@3/dist/vue.global.js')
script(type='text/javascript' src='script_vues/index.js')
